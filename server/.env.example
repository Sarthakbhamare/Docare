# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/docare_health
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/docare_health?retryWrites=true&w=majority
MONGODB_OPTIONS_USE_NEW_URL_PARSER=true
MONGODB_OPTIONS_USE_UNIFIED_TOPOLOGY=true
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_long_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars_long_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_encryption_key_for_phi_data_change_in_production
ENCRYPTION_IV_LENGTH=16

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://sarthakbhamare.github.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration (Document Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=docare-documents-encrypted
AWS_S3_BUCKET_REGION=us-east-1

# Twilio Configuration (Video Consultations)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@docare.health
SMTP_PASS=your_smtp_password

# Redis Configuration (Session Store - Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_LEVEL=info

# HIPAA Compliance
HIPAA_BREACH_NOTIFICATION_EMAIL=security@docare.health
HIPAA_COMPLIANCE_OFFICER_EMAIL=compliance@docare.health

# Feature Flags
ENABLE_MFA=true
ENABLE_WEBSOCKET=true
ENABLE_VIDEO_CALLS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Monitoring & Alerts
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Development Only
DEBUG=docare:*
LOG_LEVEL=debug
